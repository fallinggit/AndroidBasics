<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp" android:gravity="center">
    <Button
        android:id="@+id/btn_a_fragment_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:textColor="@color/white"
        android:text="给Activity传递消息"
        android:textAllCaps="false"
        android:gravity="center"/>
    <Button
        android:id="@+id/btn_a_fragment_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:textColor="@color/white"
        android:text="更换为BFragment"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <Button
        android:id="@+id/btn_a_fragment_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_red"
        android:textColor="@color/white"
        android:text="更换TextView的文字内容"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/black"
        android:text="我是AFragment"
        android:textAllCaps="false"
        android:gravity="center"/>

</LinearLayout>